#include<stdio.h> 
void num(int n); 
int DigitsOfNumber(int n); 
int SumOfDigits(int n); 
 int main() 
{	int n; 
	printf("enter number="); 
	scanf("%d",&n); 
	num(n); 
} 
void num(int n) 
{	int a,s; 
	a=DigitsOfNumber(n); 
	if(a>1) 
	{ 
		s=SumOfDigits(n); 
		num(s);	 
	} 
	else 
		printf("sum as single digit=%d",n); 
} 
int DigitsOfNumber(int n) 
{ 
	int c=0; 
	while(n!=0) 
	{ 
		n=n/10; 
		++c; 
	} 
	return c; 
} 
int SumOfDigits(int n) 
{ 
	int remainder,sum=0; 
	while(n!=0) 
	{ 
		remainder=n%10; 
		sum=sum+remainder; 
		n=n/10; 
	} 
	printf("%d\n",sum); 
	return sum; 
}
